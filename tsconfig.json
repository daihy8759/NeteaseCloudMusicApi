{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "pretty": true,
        "rootDir": "src",
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "lib",
        "lib": ["es2018", "dom"],
        "importHelpers": true
    },
    "exclude": ["node_modules", "lib", "esm", "tests", "stories"],
    "include": ["typings/*.d.ts", "src/**/*.ts"]
}
